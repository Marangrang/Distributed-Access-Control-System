# === Application Environment ===
APP_ENV=production
APP_DEBUG=false
LOG_LEVEL=info

# === Database Configuration ===
DB_HOST=db
DB_PORT=5432
DB_NAME=face_verification
DB_USER=myuser
DB_PASSWORD=mypassword
DB_SSL_MODE=disable

# === MinIO / S3 Storage Configuration ===
MINIO_ENDPOINT=http://minio:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=faiss-index
MINIO_REGION=us-east-1
MINIO_SECURE=true

# === FAISS / Embedding Index ===
FAISS_INDEX_PATH=/data/faiss_index
EMBEDDING_DIM=512          # Adjust if your embeddings change
EMBEDDING_DTYPE=float16

# === FastAPI / Uvicorn Settings ===
UVICORN_HOST=0.0.0.0
UVICORN_PORT=8080
UVICORN_WORKERS=2

# === JWT / API Authentication ===
JWT_SECRET_KEY=your_long_random_secret_here
JWT_EXPIRY_HOURS=12

# === Local Paths / Volume Mounts ===
DATA_DIR=/opt/face-verification/data
LOG_DIR=/opt/face-verification/logs